{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "env": {
      "description": "environment variables",
      "properties": {
        "JWT_SECRET": {
          "default": "ChangeMe",
          "description": "The secret used to sign the JWT token. It is important that you change it to something else",
          "title": "JWT_SECRET",
          "type": "string"
        },
        "TZ": {
          "default": "UTC",
          "description": "Application Timezone",
          "title": "TZ",
          "type": "string"
        }
      },
      "required": [],
      "title": "env",
      "type": "object"
    },
    "global": {
      "description": "Global values are values that can be accessed from any chart or subchart by exactly the same name.",
      "required": [],
      "title": "global",
      "type": "object"
    },
    "image": {
      "properties": {
        "pullPolicy": {
          "default": "IfNotPresent",
          "description": "image pull policy",
          "title": "pullPolicy",
          "type": "string"
        },
        "repository": {
          "default": "alfhou/hammond",
          "description": "image repository",
          "title": "repository",
          "type": "string"
        },
        "tag": {
          "default": "",
          "description": "image tag",
          "title": "tag",
          "type": "string"
        }
      },
      "required": [],
      "title": "image",
      "type": "object"
    },
    "ingress": {
      "properties": {
        "main": {
          "description": "Enable and configure ingress settings for the chart under this key.",
          "properties": {
            "enabled": {
              "default": false,
              "title": "enabled",
              "type": "boolean"
            }
          },
          "required": [],
          "title": "main",
          "type": "object"
        }
      },
      "required": [],
      "title": "ingress",
      "type": "object"
    },
    "persistence": {
      "description": "Configure persistence settings for the chart under this key.",
      "properties": {
        "assets": {
          "properties": {
            "enabled": {
              "default": false,
              "title": "enabled",
              "type": "boolean"
            },
            "mountPath": {
              "default": "/assets",
              "title": "mountPath",
              "type": "string"
            }
          },
          "required": [],
          "title": "assets",
          "type": "object"
        },
        "config": {
          "properties": {
            "enabled": {
              "default": false,
              "title": "enabled",
              "type": "boolean"
            },
            "mountPath": {
              "default": "/config",
              "title": "mountPath",
              "type": "string"
            }
          },
          "required": [],
          "title": "config",
          "type": "object"
        }
      },
      "required": [],
      "title": "persistence",
      "type": "object"
    },
    "service": {
      "description": "Configures service settings for the chart.",
      "properties": {
        "main": {
          "properties": {
            "ports": {
              "properties": {
                "http": {
                  "properties": {
                    "port": {
                      "default": 3000,
                      "title": "port",
                      "type": "integer"
                    }
                  },
                  "required": [],
                  "title": "http",
                  "type": "object"
                }
              },
              "required": [],
              "title": "ports",
              "type": "object"
            }
          },
          "required": [],
          "title": "main",
          "type": "object"
        }
      },
      "required": [],
      "title": "service",
      "type": "object"
    }
  },
  "required": [],
  "type": "object"
}