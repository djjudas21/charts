{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "env": {
      "description": "environment variables. See [image docs](https://github.com/laurent22/joplin) for more details.",
      "properties": {
        "APP_BASE_URL": {
          "default": "https://joplin.domain",
          "description": "joplin-server base URL",
          "title": "APP_BASE_URL",
          "type": "string"
        },
        "APP_PORT": {
          "default": 22300,
          "description": "joplin-server listening port (same as Service port)",
          "title": "APP_PORT",
          "type": "integer"
        },
        "DB_CLIENT": {
          "default": "pg",
          "description": "Use pg for postgres",
          "title": "DB_CLIENT",
          "type": "string"
        },
        "POSTGRES_DATABASE": {
          "default": "joplin",
          "description": "Postgres DB name",
          "title": "POSTGRES_DATABASE",
          "type": "string"
        },
        "POSTGRES_HOST": {
          "default": "joplin-postgresql",
          "description": "Postgres DB Host",
          "title": "POSTGRES_HOST",
          "type": "string"
        },
        "POSTGRES_PASSWORD": {
          "default": "joplin-pass",
          "description": "Postgres DB password",
          "title": "POSTGRES_PASSWORD",
          "type": "string"
        },
        "POSTGRES_PORT": {
          "default": "5432",
          "description": "Postgres DB port",
          "title": "POSTGRES_PORT",
          "type": "string"
        },
        "POSTGRES_USER": {
          "default": "joplin",
          "description": "Postgres DB Username",
          "title": "POSTGRES_USER",
          "type": "string"
        },
        "TZ": {
          "default": "UTC",
          "description": "Set the container timezone",
          "title": "TZ",
          "type": "string"
        }
      },
      "required": [],
      "title": "env",
      "type": "object"
    },
    "global": {
      "description": "Global values are values that can be accessed from any chart or subchart by exactly the same name.",
      "required": [],
      "title": "global",
      "type": "object"
    },
    "image": {
      "properties": {
        "pullPolicy": {
          "default": "IfNotPresent",
          "description": "image pull policy",
          "title": "pullPolicy",
          "type": "string"
        },
        "repository": {
          "default": "joplin/server",
          "description": "image repository",
          "title": "repository",
          "type": "string"
        },
        "tag": {
          "default": "",
          "description": "image tag",
          "title": "tag",
          "type": "string"
        }
      },
      "required": [],
      "title": "image",
      "type": "object"
    },
    "ingress": {
      "properties": {
        "main": {
          "description": "Enable and configure ingress settings for the chart under this key.",
          "properties": {
            "enabled": {
              "default": false,
              "title": "enabled",
              "type": "boolean"
            }
          },
          "required": [],
          "title": "main",
          "type": "object"
        }
      },
      "required": [],
      "title": "ingress",
      "type": "object"
    },
    "postgresql": {
      "description": "Enable and configure postgresql database subchart under this key.\n   For more options see [postgresql chart documentation](https://github.com/bitnami/charts/tree/master/bitnami/postgresql)",
      "properties": {
        "enabled": {
          "default": false,
          "title": "enabled",
          "type": "boolean"
        },
        "image": {
          "properties": {
            "repository": {
              "default": "bitnamilegacy/postgresql",
              "title": "repository",
              "type": "string"
            }
          },
          "required": [],
          "title": "image",
          "type": "object"
        },
        "persistence": {
          "properties": {
            "enabled": {
              "default": false,
              "title": "enabled",
              "type": "boolean"
            }
          },
          "required": [],
          "title": "persistence",
          "type": "object"
        },
        "postgresqlDatabase": {
          "default": "joplin",
          "title": "postgresqlDatabase",
          "type": "string"
        },
        "postgresqlPassword": {
          "default": "joplin-pass",
          "title": "postgresqlPassword",
          "type": "string"
        },
        "postgresqlUsername": {
          "default": "joplin",
          "title": "postgresqlUsername",
          "type": "string"
        }
      },
      "required": [],
      "title": "postgresql",
      "type": "object"
    },
    "service": {
      "description": "Configures service settings for the chart.",
      "properties": {
        "main": {
          "properties": {
            "ports": {
              "properties": {
                "http": {
                  "properties": {
                    "port": {
                      "default": 22300,
                      "title": "port",
                      "type": "integer"
                    }
                  },
                  "required": [],
                  "title": "http",
                  "type": "object"
                }
              },
              "required": [],
              "title": "ports",
              "type": "object"
            }
          },
          "required": [],
          "title": "main",
          "type": "object"
        }
      },
      "required": [],
      "title": "service",
      "type": "object"
    }
  },
  "required": [],
  "type": "object"
}